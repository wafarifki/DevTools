{
  "manifest_version": 3,
  "name": "DevTools",
  "version": "1.0.0",
  "description": "DevTools by Wafa Rifqi Anafin. All-in-one developer tools: Inspector, Eyedropper, Screenshot, and Responsive Testing.",
  "author": "Wafa Rifqi Anafin",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "desktopCapture",
    "downloads",
    "offscreen",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  }
}
